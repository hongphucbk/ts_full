<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Alarm
    <small>List</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/alarm"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Alarm</li>
  </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">
  <form method="post" action="/alarm/edit/<%= alarm.id %>">
    <div class="form-row">
      <div class="col-md-4 mb-3 col-sm-6">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Tag namw..." value="<%= alarm.name %>">
      </div>
      <div class="col-md-4 mb-3 col-sm-6">
        <label>bit</label>
        <input type="text" class="form-control" name="bit" placeholder="Bit..."
          value="<%= alarm.bit %>" required>
      </div>
      <div class="col-md-4 mb-3">
        <label>Alarm text</label>
        <input type="text" class="form-control" name="text" placeholder="Alarm text..."
          value="<%= alarm.text %>">
      </div>
      <div class="col-md-4 mb-3 col-sm-6">
        <label>Flags</label>
        <input type="text" class="form-control" name="flag" placeholder="Flags..."
          value="<%= alarm.flag %>" required>
      </div>
      <div class="col-md-4 mb-3 col-sm-6">
        <label>Note</label>
        <input type="text" class="form-control" name="note" placeholder="Role..."
          value="<%= alarm.note %>">
      </div>
    </div>
      
    <div class="form-row">
      <div class="col-md-12 mb-3 col-sm-6">
      <br>
        <button class="btn btn-success" type="submit">Edit </button>
      </div>
    </div>  
  </form>

</section>



